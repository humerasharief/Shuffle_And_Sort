<body>
	<header><h2>Shuffle and Sort</h2></header>
	<section>
		<div class="row">
			<div class='col-sm-12 col-lg-6'>
				<button type="button" class="btn btn-primary" onclick="mySort()">Sort</button>
				<button type="button" class="btn btn-primary" onclick="myShuffle()">Shuffle</button>
			</div>
			<div class='col-sm-12 col-lg-6'>
				<div id="cubeContainer"></div>
			</div>
			
		</div>
		<p>Shuffle & Sort by Humera Yasmeen</p>
	</section>


<script>
	var sampleArray = [1, 2, 3, 4, 9, 7, 8, 5, 6];
	sampleArrayInTable(sampleArray);

	function sampleArrayInTable(sampleArray){
	  var perrow = 3, 
	  html = "<div class='row'>";
	  for (var i=0; i<sampleArray.length; i++) {
		html += "<div class='col-sm-12 col-lg-4' id='col"+i+"'><p>" + sampleArray[i] + "</p></div>";
		var next = i+1;
		if (next%perrow==0 && next!=sampleArray.length) {
		  html += "</div><div class='row'>";
		}
	  }
	  html += "</div></div>";
	  document.getElementById("cubeContainer").innerHTML = html;
	}
	function mySort() {
	  sampleArray.sort();
	  sampleArrayInTable(sampleArray);
	}

	function myShuffle() {
	  sampleArray.sort(() => Math.random() - 0.5);
	  sampleArrayInTable(sampleArray)
	}

</script>

